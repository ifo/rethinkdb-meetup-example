extends layout

block content
  h2= post.title
  if user && user.name
    h5 by 
      a(href='/user/#{user.id}/posts')= user.name
  p: pre= post.text
  hr
  ul
    li: a(href='/') Home
    li: a(href='/post') Create another post
    li Friendly URL: 
      a(href='/post/title/#{post.slug}') /post/title/#{post.slug}
      |  (Visit this only after completing <strong>TODO #14</strong>)
    li
      a(href='/post/#{post.id}/details') Post details
      |  (Visit this only after completing <strong>TODO #16</strong>)
